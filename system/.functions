# Mac and Linux

## 1337
mkcd () {
	mkdir $1 && cd $1
}

## Delete string from known hosts when
## ssh-agent sees MITM-attack
ssh_delete_known_host () {
	sed -i ".bak" $1d ~/.ssh/known_hosts
}

## Extract file, example. "ex package.tar.bz2"
ex () {
   if [ -f $1 ] ; then
       case $1 in
           *.tar.bz2)   tar xvjf $1    ;;
           *.tar.gz)    tar xvzf $1    ;;
           *.bz2)       bunzip2 $1     ;;
           *.rar)       unrar x $1     ;;
           *.gz)        gunzip $1      ;;
           *.tar)       tar xvf $1     ;;
           *.tbz2)      tar xvjf $1    ;;
           *.tgz)       tar xvzf $1    ;;
           *.zip)       unzip $1       ;;
           *.Z)         uncompress $1  ;;
           *.7z)        7z x $1        ;;
           *)           echo "don't know how to extract '$1'..." ;;
       esac
   else
       echo "'$1' is not a valid file!"
   fi
 }